<div lowercase="" class="w-layout-blockcontainer container_l w-container">
    <div class="w-layout-vflex flex_center-center spacing_4">
        <div class="w-layout-vflex flex_dp-center-tb-left spacing_1">
            {% if section.settings.use_basic_heading %}
                <h2>{{ section.settings.text_meet_your_match_part_1 }} {{ section.settings.text_meet_your_match_part_2 }} {{ section.settings.text_meet_your_match_part_3 }}</h2>
            {% else %}
                <h2 gsap-heading="" class="heading_medium">
                    <span>
                        {{ section.settings.text_meet_your_match_part_1 }}
                    </span>
                    <span class="fancy_text">
                        {{ section.settings.text_meet_your_match_part_2 }}
                    </span>
                    <span>
                        {{ section.settings.text_meet_your_match_part_3 }}
                    </span>
                </h2>
            {% endif %}
            <div>
                {{ section.settings.text_content }}
            </div>
        </div>
        <ul role="list" class="grid_3col w-list-unstyled">{% for product in collection.products %} <li
                li-for="product in collection.products">

                <div class="liquid-embed w-embed">
                    {% assign keycolor = product.metafields.custom.theme_colour | default: 'pink' %}
                    {% assign byline = product.metafields.custom.byline %}
                    {% assign transparent_image = product.metafields.custom.transparent_image %}</div>

                <a li-object:href="product.url" data-w-id="32e6145a-9a7c-f1ae-5f38-a7658c4031ba"
                    href="{{ product.url }}" class="collection_product-wrapper w-inline-block">
                    <div data-body="{{ keycolor }}" class="collection_product" style="position: relative;">

                        <img src="{{ product.metafields.custom.hover_image | img_url: 'master' }}" style="position:absolute; z-index:10; width:100%; height:100%;scale:5;pointer-events:none;" class="product-hoverimg"> 
                        <div class="collection_product-content">
                            
                            <img src="{{ product.metafields.custom.transparent_image | img_url: 'master' }}" loading="lazy" li-object:src="product.metafields.custom.transparent_image | img_url: 'master'" li-object:alt="product.featured_image.alt" alt="{{ product.featured_image.alt }}"  class="collection_product-image full">
                            <div data-w-id="32e6145a-9a7c-f1ae-5f38-a7658c4031be" class="collection_product-tagwrapper">
                                {% for tags in product.metafields.custom.key_ingredients.value limit:3 %} <div
                                    li-for="tags in product.metafields.custom.key_ingredients.value">

                                    <div li-object:text="tags.ingredient_name" class="collection_product-tag">
                                        {{ tags.ingredient_name }}
                                    </div>

                                </div>
                                {% endfor %}</div>
                        </div>
                    </div>
                    <div class="collection_product-label">
                        <div class="w-layout-vflex spacing_1">
                            <h3 li-object="product.title" class="heading_small">{{ product.title }}</h3>
                            <p class="heading_very-small">{{ byline }}</p>
                        </div>
                        <div button-size="" class="button is-pink">
                            <div li-object="product.price | money">{{ product.price | money }}</div>
                        </div>
                    </div>
                </a>

            </li>
            {% endfor %}</ul>
    </div>
</div>


{% schema %}
{
    "tag": "section",
    "name": "collection_list",
    "class": "section_meetyourmatch",
    "settings": [
        {
            "type": "checkbox",
            "id": "use_basic_heading",
            "label": "Use Basic Heading",
            "default": false,
            "info": "Check this to use a simple heading instead of the styled version"
        },
        {
            "id": "text_meet_your_match_part_1",
            "type": "text",
            "label": "Meet your Match - Part 1",
            "default": "Meet"
        },
        {
            "id": "text_meet_your_match_part_2",
            "type": "text",
            "label": "Meet your Match - Part 2",
            "default": "your"
        },
        {
            "id": "text_meet_your_match_part_3",
            "type": "text",
            "label": "Meet your Match - Part 3",
            "default": "match"
        },
        {
            "id": "text_content",
            "type": "text",
            "label": "Content",
            "default": "our best-for-you gummy blends are the perfect addition to your daily routine."
        }
    ],
    "presets": [
        {
            "name": "collection_list",
            "category": "Liquify"
        }
    ]
}
{% endschema %}