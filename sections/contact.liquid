  </form>
  <div id="newsletter-message"></div>
</div>

<script>
  $(document).ready(function() {
    $('#newsletter-form').submit(function(event) {
      event.preventDefault(); // Prevent the form from submitting normally

      var $form = $(this);
      var $messageDiv = $('#newsletter-message');
      
      $.ajax({
        type: 'POST',
        url: '/contact#contact_form',
        data: $form.serialize(),
        success: function(response) {
          // Display success message
          $messageDiv.html('<p>Thank you for subscribing!</p>').css('color', 'green');
          $form.trigger('reset'); // Reset the form fields
        },
        error: function(response) {
          // Display error message
          $messageDiv.html('<p>There was an error. Please try again.</p>').css('color', 'red');
        }
      });
    });
  });
</script>

