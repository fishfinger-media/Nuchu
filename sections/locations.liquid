<div style="background-color: var(--color--lilac-light);">
  <div class="w-layout-blockcontainer container_l w-container" id="locations">
    <div class="w-layout-vflex spacing_2">
      <div class="grid_3col spacing_2 split-container" style="width:100%">
        {% for block in section.blocks %}
          
          <div li-block="Card" class="sustainability_card" style="gap:3rem">
            <img class="sustainability_icon" src="{{ block.settings.image | img_url: 'master'}}" alt="{{ block.settings.image.alt }}" style="height:2rem" loading="lazy">

            <div class="w-layout-vflex spacing_1">
                <div class="heading_small" style="font-size:0.875rem; color:#f70da6"> {{ block.settings.country }} </div>
                <h3 class="heading_small" style="font-size:1.2rem;">
                    {{  block.settings.heading }}
                </h3>
                <p> {{block.settings.address}} </p>
            </div>
        </div>

        {% endfor %}
      </div>
    </div>
  </div>
</div>
  
  {% schema %}
  {
    "name": "Locations",
    "max_blocks": 8,
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Section Heading",
        "default": "Our Locations"
      }
    ],
    "blocks": [
      {
        "type": "location",
        "name": "Location",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Location Image"
          },
          {
            "type": "text",
            "id": "country",
            "label": "Country Name",
            "default": "Monaco"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Location Name",
            "default": "Location Name"
          },
          {
            "type": "text",
            "id": "address",
            "label": "Address",
            "default": "Enter location address here"
          }
        ]
      }
    ]
  }
  {% endschema %}