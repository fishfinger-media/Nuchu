<div class="steps_container"><div class="steps_grid">{% for block in section.blocks %}
    {% if block.type == "step" %}
                    <div li-block="Step">
                                    <div gsap-staggerup="" class="steps_grid-item"><img class="steps_image"
     src="{{ block.settings.image_step_icon | img_url: 'master' }}"
     alt="{{ block.settings.image_step_icon.alt }}"
     loading="lazy">
<h2 class="heading_small">
{{ block.settings.text_title }}
</h2>
<div> {{ block.settings.richtext_content }} </div>
</div>
                            </div>
            {% endif %}
{% endfor %}
</div></div>

